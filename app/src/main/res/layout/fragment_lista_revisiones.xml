<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- EditText para registrar los datos de la revisión -->
        <EditText
            android:id="@+id/et_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha" />

        <EditText
            android:id="@+id/et_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso" />

        <EditText
            android:id="@+id/et_desparasitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Desparasitario" />

        <EditText
            android:id="@+id/et_vacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vacuna" />

        <EditText
            android:id="@+id/et_prox_vacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Próxima Vacuna" />

        <!-- Botón para guardar la revisión -->
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar" />

        <!-- Contenedor para mostrar las revisiones guardadas dinámicamente -->
        <LinearLayout
            android:id="@+id/revisiones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
