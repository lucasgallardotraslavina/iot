<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_registrar_historia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Historia"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_historia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe la historia de tu mascota"
            android:padding="10dp" />

        <Button
            android:id="@+id/btn_guardar_historia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Guardar Historia" />

        <LinearLayout
            android:id="@+id/historias_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
